<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:wb="http://open.weibo.com/wb">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title></title>
        <link href="__PUBLIC__/css/common.css" rel="stylesheet" type="text/css"/>
        <link href="__PUBLIC__/css/ui-dialog.css" rel="stylesheet" type="text/css"/> 
    </head>
    <body>
        <div class="nav">当前页面：商品管理 》 类目管理</div>
        <div class="list_title">
            类目列表  （共有<span id="category_count" class="color_red"></span>条数据） <input id="butAddCategory" type="button" value="添加类目" class="hand_style" >
        </div>
        <hr/>
        <table class="gridtable">
            <THEAD> 
                <TR> 
                    <th width="50%">类目名称</th>
                    <th>更新时间</th>
                    <th>显示</th>
                    <th>操作</th>
                </TR> 
            </THEAD> 
            <TBODY id="category_list"> </TBODY> 

        </table>


        <!--新增分类-->
        <div id="addCategoryPop" class="none">
            <table class="gridtable">
                <TBODY>
                    <tr>
                        <td width="60">选择分类</td>
                        <td>
                            <input type="hidden" id="parent_id" value="0"/>
                            <select id="category_select_1">
                                <option value="-1">请选择</option>
                            </select><br/>
                            <select id="category_select_2" class="none">
                                <option value="-1">请选择</option>
                            </select><br/>
                            <select id="category_select_3" class="none">
                                <option value="-1">请选择</option>
                            </select><br/>
                        </td>
                    </tr>
                    <tr>
                        <td>分类名称</td>
                        <td><input id="category_name" /><span class="color_red"></span></td>
                    </tr>
                    <tr>
                        <td>排序</td>
                        <td><input id="sort_value" value="0" /><span class="color_red"></span></td>
                    </tr>
                    <tr>
                        <td>备注</td>
                        <td><textarea id="comment"/></textarea></td>
                    </tr>

                </TBODY>
            </table>
        </div>
        <!--编辑分类-->
        <div id="editCategoryPop" class="none">
            <table class="gridtable">
                <TBODY>
                    <tr>
                        <td width="60">分类</td>
                        <td id="category_tree_info"></td>
                    </tr>
                    <tr>
                        <td>分类名称</td>
                        <td><input id="category_name" /><span class="color_red"></span></td>
                    </tr>
                    <tr>
                        <td>排序</td>
                        <td><input id="sort_value" value="0" /><span class="color_red"></span></td>
                    </tr>
                    <tr>
                        <td>备注</td>
                        <td><textarea id="comment"/></textarea></td>
                    </tr>

                </TBODY>
            </table>
        </div>

        <script  src="__PUBLIC__/js/jquery-1.9.1.min.js" type="text/javascript"></script>
        <script src="__PUBLIC__/js/dialog-min.js"></script>
        <script src="__PUBLIC__/js/product_manager/category.js?v={$version}" type="text/javascript"></script>
        <script src="__PUBLIC__/js/permission.js?v={$version}"></script>
        <script>
            $(function () {
                //载入一级分类
                //window.Category.loadCategory(0, 1);
                //绑定点击事件
                window.Category.bindClickEvent();
                //搜索结果
                window.Category.searchCategory();

                //操作
                //window.permission_operation = {$permission};
            });
        </script>
    </body>
</html>
