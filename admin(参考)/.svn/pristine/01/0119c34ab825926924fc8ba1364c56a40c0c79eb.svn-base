<div id="addTagHtml">
             <form action="/Tag/modifyTag" method="post" enctype="multipart/form-data">
                 <table width="100%" align="center" height="130">
                     
                     <tr >
                         <td align="right" height="50px;">标签类型:</td>
                         <td><select name="type">
                            <option value="">请选择</option>
                            <option value="1" <if condition="$list.type eq 1">selected='selected'</if>>健康标签</option>
                            <option value="2" <if condition="$list.type eq 2">selected='selected'</if>>安心度标签</option>
                            <option value="3" <if condition="$list.type eq 3">selected='selected'</if>>敏感人群标签</option>
                            <option value="4" <if condition="$list.type eq 4">selected='selected'</if>>促销标签</option>
                        </select></td>
                     </tr>
                     <tr >
                         <td align="right" height="50px;">标签名称:</td>
                         <td><input type="text" name="name" value="{$list.name}"></td>
                     </tr>
                     <tr>
                         <td align="right">标签顺序:</td>
                         <td><input type="text" name="priority" value="{$list.priority}" onblur="check_priority(this)">&nbsp;<font color="red">* 顺序必须为数字</font></td>
                     </tr>
                     <tr>
                         <td align="right" height="50px;">标签icon:</td>
                         <td><input type="file" name="pic_url"></td>
                     </tr>
                     <tr>
                         <td align="right" height="50px;"></td>
                         <td><if condition="$list.pic_url neq ''"><img src="{$list.pic_url}" width="50px" height="50px"></if></td>
                     </tr>
                     <tr>
                         <td></td><input type="hidden" value="{$list.tag_id}" name="tag_id"><td><input type="submit" value="提交"><input type="reset" value="重置"></td>
                     </tr>
                 </table>
             </form>
         </div>